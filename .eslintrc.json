{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "babel"
    ],
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {
        "localStorage": true,
        "test": true,
        "expect": true,
        "fetch": true,
        "describe": true,
        "it": true,
        "document": true,
        "window": true,
        "jest": true,
        "beforeEach": true
    },
    "rules": {
        "indent": [1, 4, { "SwitchCase": 1 }],
        "linebreak-style": [0],
        "no-multi-assign": [0],
        "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
        "no-unused-vars": [1],
        "no-param-reassign": [0],
        "react/jsx-filename-extension": [0],
        "react/jsx-indent": [1, 4],
        "react/jsx-indent-props": [1, 4],
        "no-underscore-dangle": [0],
        "jsx-a11y/anchor-is-valid": [ "error", { "components": [ "Link" ], "specialLink": [ "to" ] } ]
    },
    "extends": "airbnb"
}